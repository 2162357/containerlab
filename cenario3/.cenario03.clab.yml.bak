# Lab 2 # 
#client1 - C3R1 - C3R3 -C3R2 - Client2
name: cenario03

topology:
  kinds:
    srl:
      image: ghcr.io/nokia/srlinux
    linux:
      image: ghcr.io/hellt/network-multitool
  nodes:
    c3r1:
      kind: srl
      startup-config: c3r1.cfg
    c3r2:
      kind: srl
      startup-config: c3r2.cfg
    c3r3:
      kind: srl
      startup-config: c3r3.cfg
    client1:
      kind: linux
    client2:
      kind: linux

  links:
    - endpoints: ["client1:eth1", "c3r1:e1-2"]
    - endpoints: ["c3r1:e1-1", "c3r2:e1-1"]
    - endpoints: ["c3r1:e1-3", "c3r3:e1-1"]
    - endpoints: ["c3r2:e1-3", "c3r3:e1-2"]
    - endpoints: ["c3r2:e1-2", "client2:eth1"]
